{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "packs": {
      "type": "object",
      "properties": {
        "behaviorPack": {
          "properties": {
            "name": {
              "type": "string"
            },
            "client": {
              "properties": {
                "entry": {
                  "type": "string"
                },
                "out": {
                  "type": "string"
                }
              }
            },
            "server": {
              "properties": {
                "entry": {
                  "type": "string"
                },
                "out": {
                  "type": "string"
                }
              }
            }
          }
        },
        "postBuild": {
          "type": "object",
          "properties": {
            "copy": {
              "type": "array",
              "properties": {
                "from": {
                  "type": "string"
                },
                "to": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "outDir": {
      "type": "string",
      "description": "The path to install the mincraft addons"
    }
  }
}
