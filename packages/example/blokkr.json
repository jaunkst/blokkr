{
  "packs": {
    "behaviorPack": {
      "name": "Example Behavior Pack",
      "client": {
        "entry": "src/behaviors/scripts/client/client.ts",
        "out": "dist/{packName}/scripts/client/client.ts"
      },
      "server": {
        "entry": "src/behaviors/scripts/server/server.ts",
        "out": "dist/{packName}/scripts/client/client.ts"
      }
    }
  },
  "postBuild": {
    "copy": [
      {
        "from": "src/behaviors/manifest.json",
        "to": "dist/{packName}/manifest.json"
      },
      {
        "from": "src/behaviors/pack_icon.png",
        "to": "dist/{packName}/pack_icon.png"
      }
    ]
  }
}
